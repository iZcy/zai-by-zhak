# Production Environment Configuration for Docker Compose
# For local builds - empty registry means build images locally

# ============================================
# Container Registry Configuration
# ============================================
# Empty for local builds, set to ghcr.io for GitHub Container Registry
CONTAINER_REGISTRY=
IMAGE_OWNER=
IMAGE_TAG=local

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
APP_NAME=glm-collective
APP_DOMAIN=zai.izcy.tech

# ============================================
# Service Ports
# ============================================
FRONTEND_PORT=3000
BACKEND_PORT=5000
MONGODB_PORT=27017
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================
# Backend Configuration
# ============================================
FRONTEND_URL=https://zai.izcy.tech
API_URL=https://zai.izcy.tech/api
VITE_API_URL=https://zai.izcy.tech/api

# ============================================
# MongoDB Configuration
# ============================================
MONGODB_VERSION=7.0
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=changemeplease
MONGODB_DATABASE=fullstack

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=true
BACKUP_DIR=/opt/glm-collective/backups
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# ============================================
# Logging Configuration
# ============================================
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3
